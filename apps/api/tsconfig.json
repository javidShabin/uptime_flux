{
  "extends": "../../packages/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node"],
    "lib": ["ES2020"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
